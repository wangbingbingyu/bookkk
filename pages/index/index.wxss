@import '../../style/iconfont.wxss';

.box {
  background-color: #21272e;
}

.header {
  display: flex;
  justify-content: space-between;
  color: white;
  margin-bottom: 40rpx;
}

.search {
  position: relative;
  background-color: #2d353d;
  color: #9299a9;
  border-radius: 50rpx;
  margin-bottom: 50rpx;
}

.search .iconfont {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 30rpx;
  top: 16rpx;
  z-index: 20;
}

.search .select {
  height: 96rpx;
  text-indent: 100rpx;
}

.newsortContent {
  display: flex;
  margin-left: 48rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #2f343c;
}

.newsortContent {
  display: flex;
  justify-content: space-around;
  margin-left: 48rpx;
  overflow: hidden;
  border-bottom: 2rpx solid #2f343c;
  flex-wrap: wrap;
  align-content: space-between;
}

.newsortContent .newShow {
  margin-bottom: 100rpx;
}

.newThress {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.newImage {
  width: 190rpx;
  height: 296rpx;
}

.hostser-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 660rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
  margin-top: 70rpx;
  color: white;
}

.hostser-content {
  display: flex;
  flex-wrap: wrap;
  height: 136rpx;
  align-content: space-between;
  margin-left: 45rpx;
  padding-bottom: 40rpx;
  border-bottom: 2rpx solid #2f343c;
}

.hostser-item {
  display: inline-block;
  line-height: 54rpx;
  padding: 0 40rpx;
  font-size: 24rpx;
  border: 2rpx solid white;
  border-radius: 30rpx;
  margin-right: 30rpx;
}

.hot-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 660rpx;
  margin: 0 auto;
  margin-bottom: 100rpx;
  margin-top: 70rpx;
}

.hot-title .look-all {
  font-size: 36rpx;
  color: white;
}

.hot-title .more {
  color: #959bac;
  font-size: 26rpx;
  vertical-align: middle;
  line-height: 52rpx;
}

.hot-title .iconfont {
  font-size: 20rpx;
  margin-left: 10rpx;
}

.box {
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}

.box .out {
  width: 100%;
  height: 300rpx;
}

.hot-content {
  margin-left: 48rpx;
  border-bottom: 2px solid #2f343c;
}

.hot-content-item {
  margin-top: 30rpx;
  display: inline-block;
  margin-right: 30rpx;
  width: 600rpx;
  height: 252rpx;
  background-color: #2f343c;
}

.hot-content-item image {
  width: 170rpx;
  height: 252rpx;
  margin-bottom: 20rpx;
  float: left;
  margin-right: 30rpx;
  margin-left: 34rpx;
  margin-top: -45rpx;
}

.title {
  width: 350rpx;
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.title .bookname {
  font-size: 36rpx;
  color: white;
}

.title .iconfont {
  align-items: center;
  color: #969baf;
}

.author {
  display: inline-block;
  width: 330rpx;
  color: #5a6078;
  font-size: 24rpx;
  margin-bottom: 22rpx;
  border-bottom: 2rxp solid #969baf;
}

.about {
  margin-top: 16rpx;
  white-space: no-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #777e99;
  font-size: 24rpx;
}
