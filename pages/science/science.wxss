@import '../../style/iconfont.wxss';
.science{
  background-color: #21272e;
}
.science-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 660rpx;
  margin: 0 auto;
  margin-bottom: 80rpx;
  color: white;
}

.science-title .icon-jiang-up-left{
  font-size: 40rpx;
}

.science-title .look-all {
  font-size: 36rpx;
  color: white;
}

.science-title .more {
  color: #959bac;
  font-size: 26rpx;
  vertical-align: middle;
  line-height: 52rpx;
}

.science-title .iconfont {
  font-size: 20rpx;
  color: white;
  vertical-align: middle;
}

.box {
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
}

.box .out {
  width: 100%;
  height: 300rpx;
}

.science-content {
  margin-left: 48rpx;
  border-bottom: 2px solid #2f343c;
}

.science-content-item {
  margin-top: 90rpx;
  display: inline-block;
  margin-right: 30rpx;
  width: 660rpx;
  height: 252rpx;
  background-color: #2f343c;
  margin-bottom: 90rpx;
}

.science-content-item image {
  width: 170rpx;
  height: 252rpx;
  margin-bottom: 20rpx;
  float: left;
  margin-right: 30rpx;
  margin-left: 34rpx;
  margin-top: -45rpx;
}

.title {
  width: 350rpx;
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.title .bookname {
  font-size: 36rpx;
  color: white;
}

.title .iconfont {
  align-items: center;
  color: #969baf;
}

.author {
  display: inline-block;
  width: 330rpx;
  color: #5a6078;
  font-size: 24rpx;
  margin-bottom: 22rpx;
  border-bottom: 2rxp solid #969baf;
}

.about {
  margin-top: 16rpx;
  white-space: no-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #777e99;
  font-size: 24rpx;
}