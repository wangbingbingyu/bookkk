@import '../../style/iconfont.wxss';

page {
  height: 100%;
  min-height: 100%;
  background-color: #21272e;
}

.center {
  width: 654rpx;
  margin: 0 auto;
}

.writer-title {
  display: flex;
  margin-bottom: 56rpx;
}

.writer-title .iconfont {
  color: white;
}

.writer-title .word {
  margin-left: 250rpx;
  color: white;
  font-size: 44rpx;
}

.writer-inform {
  display: flex;
  margin-bottom: 52rpx;
}

.writer-inform image {
  width: 240rpx;
  height: 240rpx;
  margin-right: 34rpx;
  border-radius: 50%;
}

.outit {
  display: flex;
  flex-direction: column;
}

.outsit {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.writer-detail {
  display: flex;
  flex-direction: column;
}

.writer-detail .name {
  font-size: 44rpx;
  color: white;
  margin-bottom: 16rpx;
}

.writer-detail .address {
  font-size: 28rpx;
  color: #b5b7c5;
}

.fenxiang {
  align-self: flex-end;
  width: 180rpx;
  line-height: 64rpx;
  color: #71768c;
  text-align: center;
  box-sizing: border-box;
  border: 2rpx solid #545d66;
  border-radius: 20rpx;
  margin-right: 22rpx;
}

.fenxiang image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 14rpx;
}

.fenxiang .word {
  font-size: 26rpx;
}

.guanzhus {
  align-self: flex-end;
  width: 180rpx;
  line-height: 64rpx;
  color: #71768c;
  text-align: center;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #478ce0;
}

.guanzhus image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 14rpx;
}

.guanzhus .word {
  font-size: 26rpx;
  color: white;
}

.writer-details {
  display: flex;
  height: 126rpx;
  align-items: center;
  background-color: #2b323b;
  justify-content: space-between;
  margin-top: 50rpx;
  border-radius: 20rpx;
  margin-bottom: 86rpx;
  box-shadow: 2rpx 2rpx 2rpx #2b323b;
}

.writer-details .love {
  border-right: none;
}

.writer-details .item {
  width: 216rpx;
  height: 80rpx;
  border-right: 2rpx solid #363c45;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.writer-details .item .num {
  font-size: 36rpx;
  color: white;
}

.writer-details .item .word {
  font-size: 24rpx;
  color: #75808d;
}

.writer-book {
  margin-top: 66rpx;
}

.writer-book .writer-book-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.writer-book .writer-book-title .name {
  font-size: 36rpx;
  color: white;
}

.writer-book .writer-book-title .nums {
  color: #478ce0;
  font-size: 24rpx;
}

.writer-book-item {
  display: flex;
  margin-left: 48rpx;
  padding-right: 48rpx;
  padding-bottom: 46rpx;
  margin-top: 60rpx;
  border-bottom: 2rpx solid #2b323b;
}

.writer-book-item image {
  width: 168rpx;
  height: 250rpx;
}

.right {
  margin-left: 32rpx;
  width: 444rpx;
  display: flex;
  flex-direction: column;
}

.right .bookname {
  color: white;
  font-size: 36rpx;
}

.strats {
  display: flex;
  margin-top: 12rpx;
  align-items: center;
  margin-bottom: 14rpx;
}

.strats .iconfont {
  color: #fb6894;
  position: relative;
  bottom: 8rpx;
}

.strats .fenshu {
  color: #ffce44;
  margin-left: 22rpx;
}

.right .about {
  color: #999fb0;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  margin-bottom: 30rpx;
}

.right .read {
  color: #478ce0;
  font-size: 24rpx;
}
